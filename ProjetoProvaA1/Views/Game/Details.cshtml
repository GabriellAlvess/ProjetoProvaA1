@model ProjetoProvaA1.Models.Game

@{
    ViewBag.Title = "Details";
}

<h2 style="color: #1E90FF; font-weight: bold;">Details</h2>

<div>
    <h4 style="color: #1E90FF;">Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.Developer.Name)
        </dt>
        <dd style="margin-bottom: 10px;">
            @Html.DisplayFor(model => model.Developer.Name)
        </dd>

        <dt style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd style="margin-bottom: 10px;">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd style="margin-bottom: 10px;">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd style="margin-bottom: 10px;">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
    </dl>
</div>

<p style="margin-top: 20px;">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary", style = "margin-right: 10px;" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>

<style>
    /* Cabeçalho principal */
    h2 {
        color: #1E90FF;
        font-weight: bold;
    }

    /* Cabeçalho da seção */
    h4 {
        color: #1E90FF;
    }

    /* Estilos para as descrições */
    .dl-horizontal dt {
        font-weight: bold;
        color: #555;
    }

    .dl-horizontal dd {
        margin-bottom: 10px;
    }

    /* Botões */
    .btn-primary {
        background-color: #1E90FF;
        color: white;
        border: none;
        padding: 10px 15px;
        font-size: 16px;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 10px 15px;
        font-size: 16px;
    }

    /* Margem entre as ações */
    p {
        margin-top: 20px;
    }
</style>
