@{
    ViewBag.Title = "Delete";
}

<h2 style="color: #FF6347; font-weight: bold;">Delete</h2>

<h3 style="color: #333;">Are you sure you want to delete this?</h3>
<div>
    <h4 style="color: #FF6347;">Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.Developer.Name)
        </dt>
        <dd style="margin-bottom: 10px;">
            @Html.DisplayFor(model => model.Developer.Name)
        </dd>

        <dt style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd style="margin-bottom: 10px;">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
